{
  "name": "__MSG_extName__",
  "version": "0.7",
  "manifest_version": 2,
  "description": "__MSG_extDescription__",
  "icons": { "16": "icon16.png",
           "48": "icon48.png",
          "128": "icon128.png"
  },
  "browser_action": {
    "default_icon": "icon19.png",
    "default_title": "__MSG_extAction__",
    "default_popup": "popup.html" 
  },
  "content_scripts": [{
  	"js": [ "avim.js" ],
  	"matches": ["http://*/*", "https://*/*"],
  	"run_at": "document_idle",
  	"all_frames": true
  }],
  "default_locale": "en",
  "offline_enabled": true,
  "background": {
    "scripts": ["background.js"]
  },
  "permissions": [
    "tabs", "storage"
  ]
}
